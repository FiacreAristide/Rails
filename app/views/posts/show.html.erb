<style>
body {
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
  margin: 0;
  padding: 0;
}

.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.notice {
  color: green;
  font-weight: bold;
  margin-bottom: 10px;
}

.action-links {
  margin-top: 10px;
}

.action-links a {
  text-decoration: none;
  margin-right: 10px;
  color: #0074d9;
}

.action-links a:hover {
  text-decoration: underline;
}

.destroy-button {
  background-color: #d9534f;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 5px 10px;
}

.destroy-button:hover {
  background-color: #c9302c;
}

</style>


<div class="container">
  <p class="notice"><%= notice %></p>

  <%= render @post %>

  <div class="action-links">
    <%= link_to "Edit this post", edit_post_path(@post) %> |
    <%= link_to "Back to posts", posts_path %>

    <%= button_to "Destroy this post", @post, method: :delete, class: "destroy-button" %>
  </div>
</div>

